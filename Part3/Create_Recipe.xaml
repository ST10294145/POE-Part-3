<Window x:Class="Part3.Create_Recipe"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Create Recipe" Height="400" Width="400">
    <Grid>
        <StackPanel>
            <TextBlock Text="Name:" />
            <TextBox x:Name="txtName" />

            <TextBlock Text="Ingredients:" />
            <TextBox x:Name="txtIngredients" />

            <TextBlock Text="Steps:" />
            <TextBox x:Name="txtSteps" />

            <TextBlock Text="Food Groups:" />
            <TextBox x:Name="txtFoodGroups" />

            <Button Content="Save Recipe" Click="btnSave_Click" />
        </StackPanel>
    </Grid>
</Window>
