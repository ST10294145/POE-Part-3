<Window x:Class="Part3.Recipes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Recipes" Height="400" Width="400">
    <Grid>
        <StackPanel>
            <TextBox x:Name="txtSearch" Width="200" Margin="10" Text="Search by name or food groups..." Foreground="Gray"
                     GotFocus="txtSearch_GotFocus" LostFocus="txtSearch_LostFocus" />
            <Button Content="Search" Click="btnSearch_Click" Width="100" Margin="10" />
            <ListBox x:Name="lstRecipes" />
        </StackPanel>
    </Grid>
</Window>
