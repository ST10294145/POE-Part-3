<Window x:Class="Part3.Recipes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Recipes" Height="400" Width="400">
    <Grid>
        <StackPanel>
            <ComboBox x:Name="cbFilterType" Width="200" Margin="10" SelectedIndex="0">
                <ComboBoxItem Content="Name" />
                <ComboBoxItem Content="Food Groups" />
                <ComboBoxItem Content="Calories" />
            </ComboBox>
            <TextBox x:Name="txtSearch" Width="200" Margin="10" Text="Search..." Foreground="Gray"
                     GotFocus="txtSearch_GotFocus" LostFocus="txtSearch_LostFocus" />
            <Button Content="Search" Click="btnSearch_Click" Width="100" Margin="10" />
            <Button Content="Delete" Click="btnDelete_Click" Width="100" Margin="10" />
            <ListBox x:Name="lstRecipes" SelectionMode="Single"/>
        </StackPanel>
    </Grid>
</Window>
