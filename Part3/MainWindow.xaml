<Window x:Class="Part3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Part3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="#FFF0F0F0">
        <StackPanel VerticalAlignment="Center">
            <TextBlock Name="tbWelcome" Text="Welcome!" FontSize="65" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,50"/>

            <Button Name="btnCreateRecipe" Content="Create a Recipe" Width="200" Height="50" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,20" Background="#FF2196F3" Foreground="White" FontSize="16" FontWeight="Bold" Click="btnCreateRecipe_Click"/>
            <Button Name="btnViewRecipe" Content="View Recipes" Width="200" Height="50" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,20" Background="#FF4CAF50" Foreground="White" FontSize="16" FontWeight="Bold" Click="btnViewRecipe_Click"/>
            <Button Name="btnExit" Content="Exit" Width="200" Height="50" HorizontalAlignment="Center" VerticalAlignment="Center" Background="#FFFF5252" Foreground="White" FontSize="16" FontWeight="Bold" Click="btnExit_Click"/>
        </StackPanel>
    </Grid>
</Window>
